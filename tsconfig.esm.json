// library as ecma script module
{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/lib/esm",
    "target": "ES2020",
    "module": "ES2015",
    "moduleResolution": "Node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/lib/**/*.ts",
  ],
}
