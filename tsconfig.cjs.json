// library as commonjs module
{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/lib/cjs",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/lib/**/*.ts",
  ],
}
