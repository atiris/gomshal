// global tsconfig as union version for library and demo
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/demo",
    "target": "ES2018",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "lib": ["DOM", "ES2018"],
  },
  "include": [
    "./src/app/*.ts",
    "./src/lib/*.ts",
  ],
}
